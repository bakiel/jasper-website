  "version": 2,
  "rewrites": [
    { "source": "/health", "destination": "/api/health" },
    { "source": "/contact", "destination": "/api/contact" },
    { "source": "/auth/google", "destination": "/api/auth/google" },
    { "source": "/auth/callback", "destination": "/api/auth/callback" },
    { "source": "/auth/me", "destination": "/api/auth/me" },
    { "source": "/auth/logout", "destination": "/api/auth/logout" },
    { "source": "/imail/send", "destination": "/api/imail/send" },
    { "source": "/imail/verify", "destination": "/api/imail/verify" },
    { "source": "/api/v1/notifications", "destination": "/api/notifications" },
    { "source": "/api/v1/webhooks/contact-form", "destination": "/api/webhooks/contact-form" },
    { "source": "/api/v1/crm/leads", "destination": "/api/crm/leads" },
    { "source": "/api/v1/crm/intake", "destination": "/api/crm/intake" },

    { "source": "/api/v1/admin/auth/google/client-id", "destination": "/api/admin/auth/google-client-id" },
